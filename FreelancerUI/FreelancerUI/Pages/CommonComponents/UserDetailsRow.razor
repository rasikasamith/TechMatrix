@using FreelancerUI.Models;

<td>@userViewModel.UserName</td>
<td>@userViewModel.Email</td>
<td>@userViewModel.PhoneNumber</td>
<td>@userViewModel.SkilSets</td>
<td>@userViewModel.Hobby</td>
<td><button @onclick="UpdateUser" class="btn btn-primary">Update</button></td>
<td><button @onclick="DeleteUser" class="btn btn-danger">Delete</button></td>



@code {
    [Parameter]
    public UserViewModel userViewModel { get; set; }

    [Parameter]
    public EventCallback<int> DeleteUserCallback { get; set; }

    [Parameter]
    public EventCallback<UserViewModel> UpdateUserCallback { get; set; }

    private void DeleteUser()
    {
        DeleteUserCallback.InvokeAsync(userViewModel.UId);
    }

    private void UpdateUser()
    {
        UpdateUserCallback.InvokeAsync(userViewModel);     
    }
}
